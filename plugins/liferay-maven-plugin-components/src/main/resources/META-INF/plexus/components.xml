<component-set>
	<components>
		<component>
			<role>com.liferay.maven.plugins.components.TemplateProcessor</role>
			<role-hint>freemarker</role-hint>
			<implementation>com.liferay.maven.plugins.components.impl.FreemarkerTemplateProcessor
			</implementation>
			<version>0.0.1-SNAPSHOT</version>
			<instantiation-strategy>singleton</instantiation-strategy>
			<description>A freemarker tempalate processor implementation
			</description>
			<isolated-realm>false</isolated-realm>
			<configuration>
				<templatesPath>/templates/search</templatesPath>
				<templates>
					<property>
						<name>DisplayTerms_java</name>
						<value>search_displayterms_java.ftl</value>
					</property>
					<property>
						<name>SearchTerms_java</name>
						<value>search_terms_java.ftl</value>
					</property>
					<property>
						<name>Search_java</name>
						<value>search_java.ftl</value>
					</property>
					<property>
						<name>search_init_jsp</name>
						<value>search_init_jsp.ftl</value>
					</property>
					<property>
						<name>search_form_jsp</name>
						<value>search_form_jsp.ftl</value>
					</property>
					<property>
						<name>search_jsp</name>
						<value>search_jsp.ftl</value>
					</property>
					<property>
						<name>search_results_jsp</name>
						<value>search_results_jsp.ftl</value>
					</property>
					<property>
						<name>search_rows_jsp</name>
						<value>search_rows_jsp.ftl</value>
					</property>
					<property>
						<name>search_row_actions_jsp</name>
						<value>search_row_actions_jsp.ftl</value>
					</property>
				</templates>
			</configuration>
		</component>
		<component>
			<role>com.liferay.maven.plugins.components.LiferayPortalCodeBuilder
			</role>
			<role-hint>search-container</role-hint>
			<implementation>com.liferay.maven.plugins.components.impl.SearchContainerBuilder
			</implementation>
			<version>0.0.1-SNAPSHOT</version>
			<instantiation-strategy>singleton</instantiation-strategy>
			<description>Search Container code builder implementation
			</description>
			<isolated-realm>false</isolated-realm>
			<requirements>
				<requirement>
					<role>com.liferay.maven.plugins.components.TemplateProcessor</role>
					<role-hint>freemarker</role-hint>
					<field-name>templateProcessor</field-name>
				</requirement>
			</requirements>
		</component>
	</components>
</component-set>
